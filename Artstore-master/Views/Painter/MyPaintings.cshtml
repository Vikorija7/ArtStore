  
@model IEnumerable<ArtStore.Models.Painting>

<h4>Уметнички дела кои ги насликал @ViewData["PaintersName"] </h4>
<br />
@foreach (var item in Model)
{
        <div style="text-align: center;" >
        
                <img src="~/pictures/@item.Picture"
                     height="240" width="150"
                     asp-append-version="true"/>   
            <p> <a  asp-controller="Painting" asp-action="Details" asp-route-id="@item.PaintingID"> @Html.DisplayFor(modelItem => item.Title) </a><br/>
           
               @Html.DisplayFor(modelItem => item.Price) денари</p>
       </div>

}