    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaintingID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaintingID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OriginalTitle)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
         <dt class="col-sm-2">
